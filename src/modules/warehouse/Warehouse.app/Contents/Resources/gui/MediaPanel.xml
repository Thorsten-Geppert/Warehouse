<?xml version="1.0"?>
<resource version="2.3.0.1">

	<object class="wxPanel" name="MediaPanel">
		<object class="wxBoxSizer">
			<orient>wxVERTICAL</orient>

			<object class="sizeritem">
				<flag>wxEXPAND</flag>
				<option>1</option>

				<object class="wxPanel" name="filesPanel">
					<object class="wxBoxSizer">
						<orient>wxVERTICAL</orient>
					</object>
				</object>
			</object>

			<object class="spacer">
				<size>5</size>
			</object>

			<object class="sizeritem">
				<flag>wxEXPAND</flag>

				<object class="wxBoxSizer">
					<orient>wxHORIZONTAL</orient>

					<object class="sizeritem">
						<flag>wxALIGN_CENTER_VERTICAL</flag>

						<object class="wxStaticText">
							<label>Add selected file as:</label>
						</object>
					</object>

					<object class="sizeritem">
						<flag>wxLEFT | wxRIGHT | wxALIGN_CENTER_VERTICAL</flag>
						<option>1</option>
						<border>5</border>

						<object class="wxComboBox" name="addAsComboBox">
							<maxlenth>255</maxlenth>
						</object>
					</object>

					<object class="sizeritem">
						<flag>wxALIGN_CENTER_VERTICAL</flag>

						<object class="wxButton" name="addButton">
							<label>Add</label>
						</object>
					</object>
				</object>
			</object>

			<object class="spacer">
				<size>5</size>
			</object>

			<object class="sizeritem">
				<flag>wxEXPAND</flag>
				<option>1</option>

				<object class="wxListCtrl" subclass="DynSoft::DSListCtrl" name="mediaListCtrl">
					<style>wxLC_REPORT | wxLC_VRULES | wxBORDER_SUNKEN | wxLC_SINGLE_SEL</style>
				</object>
			</object>

			<object class="spacer">
				<size>5</size>
			</object>

			<object class="sizeritem">
				<flag>wxEXPAND</flag>

				<object class="wxBoxSizer">
					<orient>wxHORIZONTAL</orient>

					<object class="sizeritem">
						<flag>wxALIGN_CENTER_VERTICAL</flag>

						<object class="wxStaticText">
							<label>Change selected description:</label>
						</object>
					</object>

					<object class="spacer">
						<size>5</size>
					</object>

					<object class="sizeritem">
						<flag>wxALIGN_CENTER_VERTICAL</flag>
						<option>1</option>

						<object class="wxComboBox" name="changeDescriptionCombobox">
							<maxlenth>255</maxlenth>
						</object>
					</object>

					<object class="spacer">
						<size>5</size>
					</object>

					<object class="sizeritem">
						<flag>wxALIGN_CENTER_VERTICAL</flag>

						<object class="wxButton" name="changeButton">
							<label>change</label>
						</object>
					</object>

					<object class="sizeritem">
						<flag>wxALIGN_CENTER_VERTICAL | wxLEFT</flag>
						<border>60</border>

						<object class="wxButton" name="removeButton">
							<label>Remove</label>
						</object>
					</object>
				</object>
			</object>
		</object>

	</object>

</resource>
